<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.goodtoknow.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dc1616"
        android:text=" GoodToKnow! "
        android:textSize="55dp" />

    <TextView
        android:id="@+id/alphabet8"
        android:text="            Alphabet"
        android:textSize="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0e43e4"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/numbers_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="            Numbers"
        android:textSize="38dp"
        android:background="#fdd835" />

    <TextView
        android:id="@+id/words_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a41e7"
        android:text="              Words"
        android:textSize="38dp" />

    <TextView
        android:id="@+id/colors_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="              Colors"
        android:textSize="38dp"
        android:background="#fdd835" />

    <TextView
        android:id="@+id/pictures_text_view"
        android:text="             Pictures"
        android:textSize="38dp"
        android:background="#0a41e7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
